Atividade 4

import java.util.Scanner;

public class atividade4 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double numero1;
        double numero2;
        double numero3;
        double mediaP;

        System.out.printf("Digite o primeiro número (sendo peso 2): ");
        numero1 = sc.nextDouble();
        System.out.printf("Digite o segundo número (sendo peso 3): ");
        numero2 = sc.nextDouble();
        System.out.printf("Digite o terceiro número (sendo peso 5): ");
        numero3 = sc.nextDouble();


        mediaP = (numero1 * 2 + numero2 * 3 + numero3 + 5) / 10;

        System.out.printf("A média ponderada é:  %.2f%n", mediaP);
        sc.close();
    }
}

///////////////////////////////////////////////////////////////////////


Atividade 5

import java.util.Scanner;

public class atividade5 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int idade;
        int anos;
        int dias;

        System.out.printf("Digite sua idade em anos:  ");
        idade = sc.nextInt();


        anos = idade;
        dias = idade * 365;

        System.out.printf("A sua idade em anos é:  %d%n", anos);
        System.out.printf("A sua idade em dias é:  %d%n", dias);
        sc.close();

    }
}


