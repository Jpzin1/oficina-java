Atividade 5

import java.util.Scanner;

public class atividade5 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int idade;
        int anos;
        int dias;

        System.out.printf("Digite sua idade em anos:  ");
        idade = sc.nextInt();


        anos = idade;
        dias = idade * 365;

        System.out.printf("A sua idade em anos é:  %d%n", anos);
        System.out.printf("A sua idade em dias é:  %d%n", dias);
        sc.close();

    }
}


