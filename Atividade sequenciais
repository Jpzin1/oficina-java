Atividade 8

import java.util.Scanner;

public class atividade8 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double diasT;
        double valorD;
        double salario;

        System.out.printf("Digite quantos dias você trabalha:  ");
        diasT = sc.nextDouble();
        System.out.printf("Digite quanto você ganha por diaria:  ");
        valorD = sc.nextDouble();

        salario = diasT * valorD;

        System.out.printf("O seu salario é de: %.2f%n", salario);
        sc.close();



    }
}

