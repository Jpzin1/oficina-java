Atividade 2

import java.util.Scanner;

public class atividade2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int x;
        int multiplicacao2;
        int multiplicacao3;
        int multiplicacao4;

        System.out.printf("Insira um valor a x:  ");
        x = sc.nextInt();


        multiplicacao2 = x * 2;
        multiplicacao3 = x * 3;
        multiplicacao4 = x * 4;

        System.out.printf("O valor multiplicado por 2 é:  %d%n", multiplicacao2);
        System.out.printf("O valor multiplicado por 3 é:  %d%n", multiplicacao3);
        System.out.printf("O valor multiplicado por 4 é:  %d%n", multiplicacao4);
        sc.close();

    }
}


///////////////////////////////////////////////////////////////////////

Atividade 3

import java.util.Scanner;

public class atividade3 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        double peso;
        double altura;
        double IMC;

        System.out.printf("Digite o seu peso:  ");
        peso = sc.nextDouble();
        System.out.printf("Digite sua altura:  ");
        altura = sc.nextDouble();

        IMC = peso / (altura * altura);


        System.out.printf("O seu IMC é:  %.2f%n", IMC);
        sc.close();

    }
}


