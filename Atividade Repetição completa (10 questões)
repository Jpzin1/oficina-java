Atividade 6

import java.util.Scanner;

public class atividade6r {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int numero;
        int resultado;

        System.out.printf("Digite um número para ver a tabuada:  ");
        numero = sc.nextInt();

        for (int i = 1; i <= 10; i++) {
            resultado = numero * i;
                System.out.println(numero + " x " + i + " = " + resultado);
            }

            sc.close();
        }

    }


