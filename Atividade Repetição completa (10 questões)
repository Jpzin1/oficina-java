Atividade 7



public class atividade7r {
    public static void main(String[] args) {
        

        char Fizz;
        char Buzz;

        for (int i = 1; i <= 100; i++) {
            if (i % 3 == 0 && i % 5 == 0) {
                System.out.println("FizzBuzz");

            }
            
            else if (i % 3 == 0) {
                System.out.println("Fizz");
            }

            else if (i % 5 == 0) {
                System.out.println("Buzz");
            }

            else {
                System.out.println(i);
            }
        }
    }
}


