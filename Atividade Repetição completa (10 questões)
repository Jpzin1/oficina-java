Atividade 8


import java.util.Scanner;

public class atividade8r {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int numero;

        System.err.printf("Digite um numero inteiro positivo:  ");
        numero = sc.nextInt();

        
        if (numero > 0) {
            System.out.printf("Os divisores de " + numero + " são:  \n");

            for (int i = 1; i <= numero; i++) {
                if (numero % i == 0) {
                    System.out.println(i);
                }
            }
        } else {
            System.err.printf("Insira um número positivo inteiro!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!");
        }

        sc.close();
    }
}

//////////////////////////////////////////////////////////////////

Atividade 9

import java.util.Scanner;

public class atividade9r {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int soma = 0;
        int contador = 0;
        int numero;
        double media;

        System.out.printf("Digite numeros inteiros (0 encerra):  ");

        do {
            numero = sc.nextInt();

            if (numero != 0) {
                soma += numero;
                contador++;
            }
        } while (numero != 0);

        if (contador > 0) {
            media = (double) soma / contador;
            System.out.println("A media aritmetica é:  " + media);
        } else {
            System.out.println("Nenhum numero valido!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!");
        }

        sc.close();
    }
}


//////////////////////////////////////////////////////////////////

Atividade 10

import java.util.Scanner;

public class atividade10r {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int maior = 0;
        int numero;

        System.out.println("Digite numeros inteiros (0 encerra):  ");

        do {
            numero = sc.nextInt();

            if (numero != 0 && numero > maior) {
                maior = numero;
            }
        } while (numero != 0);

        if (maior != 0) {
            System.out.println("O maior numero é:  " + maior);
        } else {
            System.out.printf("Nenhum numero valido!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!");
        }

        sc.close();
    }
}












